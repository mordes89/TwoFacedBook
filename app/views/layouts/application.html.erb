<!DOCTYPE html>
<html>
  <head>
    <title>Twofacedbook</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <% if current_user %>
      <script>
        window.currentUser = { 
          "id": <%= current_user.id %>,
          "email": "<%= current_user.email %>"
          };
      </script>
    <% end %>
      <script type="text/javascript">
        window.facebookroundURL = "<%= image_url('facebookround.png') %>";
        window.searchURL = "<%= image_url('search.png') %>";
        window.home2URL = "<%= image_url('home.png') %>";
        window.homeURL = "<%= image_url('home2.png') %>";
        window.videoURL = "<%= image_url('video.png') %>";
        window.marketURL = "<%= image_url('market.png') %>";
        window.friendsURL = "<%= image_url('friends.png') %>";
        window.newsURL = "<%= image_url('news.png') %>";
        window.appsURL = "<%= image_url('apps.png') %>";
        window.messagesURL = "<%= image_url('messages.png') %>";
        window.bellURL = "<%= image_url('bell.png') %>";
        window.downarrowURL = "<%= image_url('down-arrow.png') %>";
        window.userURL = "<%= image_url('user_color.png') %>";
        window.logoutURL = "<%= image_url('logout.png') %>";
        window.video_colorURL = "<%= image_url('video_color.png') %>";
        window.photo_colorURL = "<%= image_url('photo_color2.png') %>";
        window.smiley_colorURL = "<%= image_url('smiley_color.png') %>";
        window.likeURL = "<%= image_url('like.png') %>";
        window.commentsURL = "<%= image_url('comments.png') %>";
        window.linkedinURL = "<%= image_url('linkedin.png') %>";
        window.ghURL = "<%= image_url('gh.png') %>";
        window.menuDotsURL = "<%= image_url('menuDots.png') %>";
        window.boyURL = "<%= image_url('boy.png') %>";
        window.editURL = "<%= image_url('edit.png') %>";
        window.deleteURL = "<%= image_url('delete.png') %>";
      </script>
      <style>
        @import url('https://fonts.googleapis.com/css2?family=Bad+Script&display=swap');
        @import url('https://fonts.googleapis.com/css2?family=Knewave&display=swap');
        @import url('https://fonts.googleapis.com/css2?family=Delius+Swash+Caps&display=swap');
        @import url('https://fonts.googleapis.com/css2?family=Purple+Purse&display=swap');
        @import url('https://fonts.googleapis.com/css2?family=Oswald:wght@300&display=swap');
        @import url('https://fonts.googleapis.com/css2?family=Oswald:wght@300&family=Poppins:ital,wght@1,300&family=Roboto:wght@300&display=swap');
        @import url('https://fonts.googleapis.com/css2?family=Purple+Purse&display=swap');
        @import url('https://fonts.googleapis.com/css2?family=Ubuntu:wght@300&display=swap');
      </style>
      
  </head>

  <body>
    <%= yield %>
  </body>
</html>
