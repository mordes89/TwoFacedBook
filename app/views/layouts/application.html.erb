<!DOCTYPE html>
<html>
  <head>
    <title>Twofacedbook</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <% if current_user %>
      <script>
        window.currentUser = { 
          "id": <%= current_user.id %>,
          "email": "<%= current_user.email %>"
          };
      </script>
      <script type="text/javascript">
        window.facebookroundURL = "<%= image_url('facebookround.png') %>";
        window.searchURL = "<%= image_url('search.png') %>";
        window.homeURL = "<%= image_url('home.png') %>";
        window.videoURL = "<%= image_url('video.png') %>";
        window.marketURL = "<%= image_url('market.png') %>";
        window.friendsURL = "<%= image_url('friends.png') %>";
        window.newsURL = "<%= image_url('news.png') %>";
        window.appsURL = "<%= image_url('apps.png') %>";
        window.messagesURL = "<%= image_url('messages.png') %>";
        window.bellURL = "<%= image_url('bell.png') %>";
        window.downarrowURL = "<%= image_url('down-arrow.png') %>";
      </script>
    <% end %>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
